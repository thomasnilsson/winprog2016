<UserControl x:Class="Diagram_WinProg2016.ClassUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diagram_WinProg2016"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF4"
             mc:Ignorable="d" 
             Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"
             d:DesignHeight="130" d:DesignWidth="150">
    <Grid x:Name ="ClassBox" >
        <Rectangle Fill="Gray" HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.418,-0.136"/>
        <Button x:Name="delete_button"  Content="X" FontSize ="8" HorizontalAlignment="Left" Margin="136,0,0,0" VerticalAlignment="Top" Width="14" Height="15" Click="delete_button_Click"/>
        <RichTextBox x:Name="FieldBox" FontSize="10" HorizontalAlignment="Left" Height="50" Margin="0,30,0,0" VerticalAlignment="Top" Width="150">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Fields"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="MethodBox" FontSize="10" HorizontalAlignment="Left" Height="50" Margin="0,80,0,0" VerticalAlignment="Top" Width="150">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Methods"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="textBox" FontSize="10" HorizontalAlignment="Left" Height="15
" TextWrapping="Wrap" Text="Class Name" VerticalAlignment="Top" Width="150" Margin="0,15,0,0"/>
       
       
    </Grid>
</UserControl>
