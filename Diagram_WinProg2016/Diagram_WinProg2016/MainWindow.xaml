<Window x:Class="Diagram_WinProg2016.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diagram_WinProg2016"
        mc:Ignorable="d"
        Title="Diagram App" Height="450" Width="720
        ">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Diagram"/>
                <MenuItem Header="_Save Diagram"/>
                <MenuItem Header="_Export to PDF"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"/>
                <MenuItem Header="_Redo"/>
                <MenuItem Header="_Copy"/>
                <MenuItem Header="_Paste"/>
                <MenuItem Header="_Delete"/>
            </MenuItem>
            <MenuItem Header="_Insert">
                <MenuItem Header="_New Class" x:Name="insertclass" Click="insertclass_Click"/>
                <MenuItem Header="_New Arrow" x:Name="inserarrow" Click="insertarrow_Click"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="MainGrid">
            
        </Grid>
    </DockPanel>
</Window>
